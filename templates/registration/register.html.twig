{% extends 'base.html.twig' %}

{% block title %}Créé un compte{% endblock %}

{% block body %}
<div class="d-flex flex-column  flex-grow-1">
    
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
<div class=" p-3 mx-3 my-auto align-self-center">
    <h1>Créé un compte</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms, { label: 'Accepter les conditions d\'utilisation ' })  }}

        <button type="submit" class="btn btn-lg btn-primary mt-3">Créé un compte</button>
    {{ form_end(registrationForm) }}
         </div>
</div>
{% endblock %}
